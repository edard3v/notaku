---
import { INDEX } from "@views/IndexView/config";
import css from "./Header.module.css";
import Link from "@components/links/Link/Link.astro";
import Logo from "@components/logos/Logo/Logo.astro";
---

<header class={css.header}>
  <nav>
    <Link href={INDEX.href}><Logo /></Link>
    <button id="header_search">üîçÔ∏è</button>
  </nav>
</header>

<script>
  import { search_animes_store } from "@react/components/shared/SearchAnimesIsland/SearchAnimes/search_animes_store";
  import { dom } from "@utils/dom/dom";

  const { select } = dom;

  document.addEventListener("astro:page-load", () => {
    const lupe = select("header_search");
    lupe?.addEventListener("click", search_animes_store.toggle_visible);
  });
</script>

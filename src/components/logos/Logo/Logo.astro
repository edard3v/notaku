---
import type { HTMLAttributes } from "astro/types";
import logo from "./notaku.png";
import Image from "astro/components/Image.astro";

interface Props extends HTMLAttributes<"picture"> {}

const { class: cls, ...rest } = Astro.props;
---

<picture {...rest} class:list={["logo", cls]}>
  <Image src={logo} alt="logo" format="avif" width={65} height={23} loading={"eager"} priority />
</picture>

<style>
  .logo {
    max-width: 65px;
    overflow: hidden;
  }
</style>
